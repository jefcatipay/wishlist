<?xml version="1.0" encoding="utf-8"?>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:padding="15dp"
                >


    <ImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_weight="0.22"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvDname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"

            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ivThumbnail"
            android:layout_toEndOf="@+id/ivThumbnail" />

        <TextView
            android:id="@+id/tvDdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/tvDname"
            android:layout_alignStart="@+id/tvDname"
             />

        <TextView
            android:id="@+id/tvDprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            />
    </RelativeLayout>
</LinearLayout>
